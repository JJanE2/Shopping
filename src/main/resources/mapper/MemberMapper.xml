<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.shopping.mapper.MemberMapper">

    <insert id="insert" parameterType="memberCreateDto">

        <selectKey keyProperty="id" resultType="java.lang.Long" order="BEFORE">
            SELECT member_seq.NEXTVAL FROM dual
        </selectKey>

        INSERT INTO member (id, loginId, nickname, password)
        VALUES (#{id}, #{loginId}, #{nickname}, #{password})
    </insert>

    <select id="findById" resultType="Member">
        SELECT * FROM MEMBER
        WHERE
            id = #{id}
    </select>

    <select id="findByLoginId" resultType="Member">
        SELECT * FROM MEMBER
        WHERE
            loginId = #{loginId}
    </select>

    <update id="update">
        UPDATE member
        SET
            nickname = #{newNickname},
            password = #{newPassword}
        WHERE
            id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM MEMBER
        WHERE
            id = #{id}
    </delete>

</mapper>