<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.shopping.mapper.OrderProductMapper">

    <insert id="insert" parameterType="orderProductCreateDto">

        <selectKey keyProperty="id" resultType="java.lang.Long" order="BEFORE">
            SELECT orderProduct_seq.NEXTVAL FROM dual
        </selectKey>

        INSERT INTO orderProduct (id, orderId, productId, productName, price, quantity)
        VALUES (#{id}, #{orderId}, #{productId}, #{productName}, #{price}, #{quantity})
    </insert>

    <select id="findById" resultType="OrderProductCreateDto">
        SELECT * FROM orderProduct
        WHERE
        id = #{id}
    </select>

    <select id="findByOrderId" resultType="OrderProductCreateDto">
        SELECT * FROM orderProduct
        WHERE
            orderId = #{orderId}
    </select>

    <update id="update" parameterType="OrderProductUpdateDto">
        UPDATE orderProduct
        SET
            quantity = #{quantity}
        WHERE
            id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM orderProduct
        WHERE
            id = #{id}
    </delete>
</mapper>